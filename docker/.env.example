# n8n Local Development Environment Variables
# Copy this file to .env and update the values

# Basic Authentication (for development)
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme

# Encryption key for credentials (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=your-32-character-encryption-key-here

# PostgreSQL Configuration (for production mode)
POSTGRES_USER=n8n
POSTGRES_PASSWORD=secure-postgres-password
POSTGRES_DB=n8n

# Redis Configuration (for scaling mode)
REDIS_PASSWORD=secure-redis-password

# Webhook URL (update for production)
WEBHOOK_URL=https://n8n.yourdomain.com/

# Timezone
GENERIC_TIMEZONE=UTC

# Grafana Configuration (for monitoring)
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure-grafana-password

# OAuth Configuration (optional)
N8N_OAUTH2_CLIENT_ID=
N8N_OAUTH2_CLIENT_SECRET=
N8N_OAUTH2_CALLBACK_URL=

# SMTP Configuration (optional)
N8N_EMAIL_MODE=smtp
N8N_SMTP_HOST=
N8N_SMTP_PORT=587
N8N_SMTP_USER=
N8N_SMTP_PASS=
N8N_SMTP_SENDER=

# AWS Configuration (optional, for S3 storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# Feature Flags
N8N_DIAGNOSTICS_ENABLED=false
N8N_PERSONALIZATION_ENABLED=false
N8N_VERSION_NOTIFICATIONS_ENABLED=false
N8N_HIRING_BANNER_ENABLED=false

# Cloudflare Tunnel Configuration (optional)
# To use Cloudflare Tunnel for secure remote access:
# 1. Create a tunnel in Cloudflare Zero Trust dashboard
# 2. Copy the tunnel token here
# 3. Run with --profile cloudflare
CLOUDFLARE_TUNNEL_TOKEN=